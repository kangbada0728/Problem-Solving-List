package exam.programmers;

import java.util.Stack;

public class StackPushPop {
	
	
	class Solution {
	    public boolean solution(int[] arr) {
	        
	        Stack<Integer> stk = new Stack<Integer>();
	        int N = arr.length;
	        
	        int print_cnt=0;
	        int idx=0;
	        for(int n=1; n<=N; ++n) {
	        	if(!stk.empty() && stk.peek()==arr[idx]) {
        			while(!stk.empty() && stk.peek()==arr[idx]) {
        				stk.pop();
        				idx+=1;
        				print_cnt+=1;
        			}
        			stk.add(n);
        		}else {
	        		stk.add(n);
	        	}
	        }
	        
	        while(!stk.empty() && stk.peek()==arr[idx]) {
	        	stk.pop();
	        	idx+=1;
	        	print_cnt+=1;
	        }
	        if(print_cnt==N) {
	        	return true;
	        }else {
	        	return false;
	        }
	    }
	}
	
	public static void main(String[] args) {
		
		
		
		

	}

}

