class Solution {
    public boolean isPalindrome(String s) {
        
        s = s.toLowerCase();
        s = s.replaceAll(" ", "");
        s = s.replaceAll("[^a-z0-9]", "");
        
        for(int i=0, j=s.length()-1; i<s.length()/2; ++i, --j) {
            if(s.charAt(i) != s.charAt(j)) {
                return false;
            }
        }
        return true;
    }
}
