class Solution {
    public int search(int[] nums, int target) {
        
        int left = 0;
        int right = nums.length-1;
        
        while(left<=right) {
            int mid = (left+right)/2;
            int midV = nums[mid];
            
            if(midV == target) {
                return mid;
            }else if(midV < target) {
                left = mid + 1;
            }else{
                right = mid -1;
            }
        }
        
        return -1;
    }
}
